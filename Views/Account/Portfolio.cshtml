@inject IViewLocalizer Localizer
@model PortfolioViewModel

@{
    ViewData["Title"] = Localizer["EditProfile"];
}

<div class="portfolio-edit">
    <div class="portfolio-edit-toolbar">
        <a asp-action="AddWork"
           class="portfolio-edit-add">
            @Localizer["AddWork"]
        </a>
    </div>
    @for (int i = 0; i < Model.Works.Count(); ++i)
    {
        string name = $"{Model.Works[i].StorageFile.Id}.{Model.Works[i].StorageFile.Extension}";
        string src = $"/images/{name}";
        <a asp-action="EditWork"
           asp-route-id="@Model.Works[i].Id"
           class="work-link">
            <div class="portfolio-edit-work">
                <div class="portfolio-edit-image-container">
                    <img src="@src" class="portfolio-edit-image">
                </div>
                <div class="portfolio-edit-text">
                    <h2 class="portfolio-edit-title">
                        @Model.Works[i].Name
                    </h2>
                    <p class="portfolio-edit-description">
                        @Model.Works[i].Description
                    </p>
                    <p class="portfolio-edit-comment">
                        @Model.Works[i].Comment
                    </p>
                </div>
            </div>
        </a>
    }
</div>